    {
      "name": "Reports",
      "item": [
        {
          "name": "Get All Reports",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/reports",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "reports"]
            }
          }
        },
        {
          "name": "Create Report",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Blood Test Report\",\n  \"doctor_name\": \"Dr. Smith\",\n  \"description\": \"Regular blood work checkup\",\n  \"appointment_date\": \"2024-01-15\",\n  \"next_appointment_date\": \"2024-04-15\",\n  \"note\": \"Follow up in 3 months\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/reports",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "reports"]
            }
          }
        },
        {
          "name": "Get Single Report",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost:3000/api/reports/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "reports", "1"]
            }
          }
        },
        {
          "name": "Update Report",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Blood Test\",\n  \"doctor_name\": \"Dr. Johnson\",\n  \"description\": \"Updated blood work results\",\n  \"appointment_date\": \"2024-02-15\",\n  \"next_appointment_date\": \"2024-05-15\",\n  \"note\": \"All results normal\"\n}"
